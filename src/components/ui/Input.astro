---
/**
 * Componente de input reutilizable
 * Props:
 * - type: tipo de input (text, email, password, etc.)
 * - label: etiqueta del input
 * - name: nombre del input
 * - placeholder: placeholder
 * - required: si es requerido
 * - error: mensaje de error
 * - value: valor inicial
 */

interface Props {
  type?: string;
  label?: string;
  name: string;
  placeholder?: string;
  required?: boolean;
  error?: string;
  value?: string;
  class?: string;
  step?: string;
  min?: string;
}

const {
  type = 'text',
  label,
  name,
  placeholder,
  required = false,
  error,
  value,
  class: className = '',
  step,
  min
} = Astro.props;

const inputClasses = `block w-full rounded-lg border ${
  error ? 'border-red-500' : 'border-gray-300'
} px-4 py-2 text-gray-900 placeholder-gray-500 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 ${className}`;
---

<div class="mb-4">
  {label && (
    <label for={name} class="block text-sm font-medium text-gray-700 mb-1">
      {label}
      {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <input
    type={type}
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    value={value}
    step={step}
    min={min}
    class={inputClasses}
  />
  {error && (
    <p class="mt-1 text-sm text-red-600">{error}</p>
  )}
</div>
