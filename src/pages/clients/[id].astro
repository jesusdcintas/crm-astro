---
/**
 * Ver detalles de un cliente y sus licencias
 */
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import { clientService } from '../../lib/services/clientService';
import { LICENSE_STATUS_LABELS, LICENSE_TYPE_LABELS } from '../../types/crm';
import { supabase } from '../../lib/database/supabase';
import { getCurrentUserProfile, isAdmin } from '../../lib/utils/roleHelper';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/clients');
}

// Obtener perfil del usuario
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const userProfile = accessToken ? await getCurrentUserProfile(accessToken) : null;
const userIsAdmin = isAdmin(userProfile);

let client;
let error = null;
let totalGastado = 0;

try {
  client = await clientService.getWithLicenses(id);
  
  if (!client) {
    return Astro.redirect('/clients');
  }

  // Obtener total gastado por el cliente
  const { data: payments } = await supabase
    .from('payments')
    .select('amount')
    .eq('client_id', id);
  
  if (payments) {
    totalGastado = payments.reduce((sum, p) => sum + (p.amount || 0), 0);
  }
} catch (e) {
  console.error('Error al obtener cliente:', e);
  error = 'No se pudo cargar el cliente';
}
---

<Layout title={`Cliente: ${client?.name || 'Detalles'} - SoftControl CRM`}>
  <div class="container">
    {error && (
      <div class="alert alert-error">
        {error}
      </div>
    )}

    {client && (
      <>
        <div class="page-header">
          <h1 class="page-title">{client.name}</h1>
          <div class="header-actions">
            <a href={`/clients/${id}/edit`} class="btn btn-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
              </svg>
              Editar Cliente
            </a>
            <a href="/clients" class="btn btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
              </svg>
              Volver al Listado
            </a>
          </div>
        </div>

        <!-- Información del Cliente -->
        <div class="card" style="margin-bottom: 2rem;">
          <h2 style="margin-bottom: 1.5rem;">Información del Cliente</h2>
          <div class="info-grid">
            <div class="info-item">
              <label>Email</label>
              <p>{client.email}</p>
            </div>
            <div class="info-item">
              <label>Teléfono</label>
              <p>{client.phone || '-'}</p>
            </div>
            <div class="info-item">
              <label>Empresa</label>
              <p>{client.company || '-'}</p>
            </div>
            <div class="info-item">
              <label>Fecha de Registro</label>
              <p>{new Date(client.created_at).toLocaleDateString('es-ES')}</p>
            </div>
            <div class="info-item highlight">
              <label>Total Gastado</label>
              <p class="total-amount">{totalGastado.toFixed(2)} €</p>
            </div>
          </div>
        </div>

        <!-- Licencias del Cliente -->
        <div class="card">
          <div class="card-header">
            <h2>Licencias ({client.licenses.length})</h2>
            {userIsAdmin && (
              <a href={`/licenses/new?client_id=${id}`} class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Nueva Licencia
              </a>
            )}
          </div>

          {client.licenses.length === 0 ? (
            <div class="empty-state-small">
              <p>Este cliente no tiene licencias asignadas</p>
            </div>
          ) : (
            <div class="table-container">
              <table>
                <thead>
                  <tr>
                    <th>Producto</th>
                    <th>Tipo</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Estado</th>
                    <th>Precio</th>
                  </tr>
                </thead>
                <tbody>
                  {client.licenses.map(license => (
                    <tr>
                      <td><strong>{license.product_name}</strong></td>
                      <td>{LICENSE_TYPE_LABELS[license.type]}</td>
                      <td>{new Date(license.start_date).toLocaleDateString('es-ES')}</td>
                      <td>{license.end_date ? new Date(license.end_date).toLocaleDateString('es-ES') : '-'}</td>
                      <td>
                        <Badge color={
                          license.status === 'activa' ? 'green' : 
                          license.status === 'pendiente_pago' ? 'yellow' : 'gray'
                        }>
                          {LICENSE_STATUS_LABELS[license.status]}
                        </Badge>
                        {license.is_expired && (
                          <Badge color="red" style="margin-left: 0.5rem;">Vencida</Badge>
                        )}
                      </td>
                      <td>{license.price.toFixed(2)} €</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          )}
        </div>
      </>
    )}
  </div>
</Layout>

<style>
  .header-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: var(--radius);
    font-size: 0.9375rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    border: 1px solid transparent;
    cursor: pointer;
  }

  .btn svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .btn-primary:hover {
    background: #4f46e5;
    border-color: #4f46e5;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
  }

  .btn-secondary {
    background: white;
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .btn-secondary:hover {
    background: var(--color-bg-alt);
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .btn-ghost {
    background: transparent;
    color: var(--color-text-light);
    border-color: transparent;
  }

  .btn-ghost:hover {
    background: var(--color-bg-alt);
    color: var(--color-text);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .card-header h2 {
    margin: 0;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .info-item label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-light);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-item p {
    font-size: 1rem;
    color: var(--color-text);
    margin: 0;
  }

  .info-item.highlight {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
    padding: 1.25rem;
    border-radius: var(--radius);
    border: 2px solid rgba(99, 102, 241, 0.2);
  }

  .info-item.highlight label {
    color: var(--color-primary);
  }

  .total-amount {
    font-size: 1.75rem !important;
    font-weight: 700 !important;
    color: var(--color-primary) !important;
    margin-top: 0.5rem !important;
  }

  .empty-state-small {
    text-align: center;
    padding: 2rem;
    color: var(--color-text-light);
    background: var(--color-bg-alt);
    border-radius: var(--radius);
  }

  .alert-error {
    padding: 1rem;
    border-radius: var(--radius);
    margin-bottom: 1.5rem;
    background: #fee2e2;
    color: #991b1b;
    border: 1px solid #fca5a5;
  }

  @media (max-width: 768px) {
    .header-actions {
      width: 100%;
    }

    .btn {
      flex: 1;
      justify-content: center;
    }

    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .card-header .btn {
      width: 100%;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
