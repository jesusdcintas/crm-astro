---
import Layout from '../../layouts/Layout.astro';
import CrearClienteForm from '../../components/customers/CrearClienteForm.astro';

// Verificar autenticaci√≥n
const token = Astro.cookies.get('sb-access-token')?.value;

if (!token) {
  return Astro.redirect('/auth/login');
}
---

<Layout title="Crear Cliente - Victoria CRM">
  <div class="page-container">
    <header class="page-header">
      <div class="header-content">
        <h1>Nuevo Cliente</h1>
        <p class="subtitle">Completa el formulario para agregar un cliente</p>
      </div>
      <a href="/customers" class="btn-secondary">
        Volver
      </a>
    </header>

    <div class="form-card">
      <CrearClienteForm />
    </div>
  </div>
</Layout>

<style>
  .page-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
  }

  .header-content h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--color-text-light);
    font-size: 1rem;
  }

  .form-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 768px) {
    .page-container {
      padding: 1rem;
    }

