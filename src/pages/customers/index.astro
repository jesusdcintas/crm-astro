---
import Layout from '../../layouts/Layout.astro';

// Verificar autenticación
const token = Astro.cookies.get('sb-access-token')?.value;

if (!token) {
  return Astro.redirect('/auth/login');
}
---

<Layout title="Clientes - Victoria CRM">
  <div class="page-container">
    <header class="page-header">
      <div class="header-content">
        <h1>Clientes</h1>
        <p class="subtitle">Gestiona y consulta tu base de clientes</p>
      </div>
      <a href="/customers/crear" class="btn-primary">
        Nuevo Cliente
      </a>
    </header>

    <div class="filters-card">
      <div class="search-box">
        <input
          type="text"
          id="searchInput"
          placeholder="Buscar por nombre, email o empresa..."
          class="form-input"
        />
      </div>
      
      <div class="filter-controls">
        <select id="estadoFilter" class="form-select">
          <option value="">Todos los estados</option>
          <option value="activo">Activo</option>
          <option value="prospecto">Prospecto</option>
          <option value="lead">Lead</option>
          <option value="inactivo">Inactivo</option>
        </select>

        <select id="ordenFilter" class="form-select">
          <option value="fecha_creacion-desc">Más recientes</option>
          <option value="fecha_creacion-asc">Más antiguos</option>
          <option value="nombre-asc">Nombre A-Z</option>
          <option value="nombre-desc">Nombre Z-A</option>
        </select>
      </div>
    </div>

    <div id="clientesContainer">
      <div class="loading-state">
        <div class="spinner"></div>
        <p>Cargando clientes...</p>
      </div>
    </div>

    <div id="paginationContainer" style="display: none;" class="pagination">
      <button id="prevBtn" class="btn-secondary" disabled>Anterior</button>
      <span id="pageInfo" class="page-info">Página 1</span>
      <button id="nextBtn" class="btn-secondary">Siguiente</button>
    </div>
  </div>
</Layout>

<style>
  .page-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
  }

  .header-content h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--color-text-light);
    font-size: 1rem;
  }

  .filters-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    margin-bottom: 2rem;
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
    box-shadow: var(--shadow-sm);
  }

  .search-box {
    flex: 1;
    min-width: 300px;
  }

  .filter-controls {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .filter-controls select {
    min-width: 180px;
  }

  .loading-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem;
    color: var(--color-text-light);
  }

  .loading-state p {
    margin-top: 1rem;
    font-size: 0.9375rem;
  }

  .clientes-grid {
    display: grid;
    gap: 1rem;
  }

  .cliente-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: var(--transition);
    cursor: pointer;
  }

  .cliente-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .cliente-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .cliente-info h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .cliente-empresa {
    color: var(--color-text-light);
    font-size: 0.9375rem;
  }

  .cliente-contacto {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-light);
    font-size: 0.875rem;
  }

  .cliente-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .cliente-fecha {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .cliente-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-icon {
    padding: 0.5rem;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    cursor: pointer;
    transition: var(--transition);
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .btn-icon:hover {
    background: var(--color-bg-alt);
    border-color: var(--color-border-dark);
  }

  .empty-state {
    text-align: center;
    padding: 6rem 2rem;
  }

  .empty-state h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .empty-state p {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .page-info {
    padding: 0.5rem 1rem;
    font-weight: 500;
    color: var(--color-text-light);
  }

  .error-state {
    background: var(--color-bg);
    border: 1px solid var(--color-danger);
    border-radius: var(--radius-lg);
    padding: 2rem;
    text-align: center;
    margin: 2rem 0;
  }

  .error-state h3 {
    color: var(--color-danger);
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .page-container {
      padding: 1rem;
    }

    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .filters-card {
      flex-direction: column;
      align-items: stretch;
    }

    .search-box {
      min-width: 100%;
    }

    .filter-controls {
      flex-direction: column;
    }

    .filter-controls select {
      min-width: 100%;
    }
  }
</style>

<script>
  let currentPage = 1;
  const limit = 50;
  let searchTerm = '';
  let estadoFilter = '';

  async function cargarClientes() {
    const container = document.getElementById('clientesContainer');
    if (!container) return;

    container.innerHTML = '<div class="loading-state"><div class="spinner"></div><p>Cargando clientes...</p></div>';

    try {
      const params = new URLSearchParams({
        limite: limit.toString(),
        page: currentPage.toString(),
      });

      if (searchTerm) params.append('busqueda', searchTerm);
      if (estadoFilter) params.append('estado', estadoFilter);

      const response = await fetch(`/api/customers?${params}`);
      
      if (!response.ok) {
        throw new Error('Error al cargar clientes');
      }

      const result = await response.json();

      if (!result.data || result.data.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <h3>No hay clientes</h3>
            <p>${searchTerm || estadoFilter ? 'No se encontraron clientes con los filtros aplicados' : 'Comienza creando tu primer cliente'}</p>
            <a href="/customers/crear" class="btn-primary">Crear Cliente</a>
          </div>
        `;
        document.getElementById('paginationContainer')!.style.display = 'none';
        return;
      }

      const clientesHTML = result.data.map((cliente: any) => {
        const estadoClass = cliente.status === 'active' ? 'success' :
                           cliente.status === 'inactive' ? 'danger' :
                           cliente.status === 'qualified' ? 'info' : 'warning';
        
        const estadoTexto = cliente.status === 'active' ? 'Activo' :
                           cliente.status === 'inactive' ? 'Inactivo' :
                           cliente.status === 'qualified' ? 'Prospecto' : 'Lead';

        return `
          <div class="cliente-card" onclick="window.location.href='/customers/${cliente.id}'">
            <div class="cliente-header">
              <div class="cliente-info">
                <h3>${cliente.first_name} ${cliente.last_name || ''}</h3>
                ${cliente.company_name ? `<div class="cliente-empresa">${cliente.company_name}</div>` : ''}
              </div>
              <span class="badge badge-${estadoClass}">${estadoTexto}</span>
            </div>
            <div class="cliente-contacto">
              ${cliente.email ? `<div>${cliente.email}</div>` : ''}
              ${cliente.phone ? `<div>${cliente.phone}</div>` : ''}
            </div>
            <div class="cliente-footer">
              <span class="cliente-fecha">Creado: ${new Date(cliente.created_at).toLocaleDateString()}</span>
              <div class="cliente-actions">
                <button class="btn-icon" onclick="event.stopPropagation(); window.location.href='/customers/${cliente.id}'">Ver</button>
              </div>
            </div>
          </div>
        `;
      }).join('');

      container.innerHTML = `<div class="clientes-grid">${clientesHTML}</div>`;

      // Actualizar paginación
      const paginationContainer = document.getElementById('paginationContainer');
      if (paginationContainer) {
        paginationContainer.style.display = 'flex';
        const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement;
        const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement;
        const pageInfo = document.getElementById('pageInfo');
        
        if (prevBtn) prevBtn.disabled = currentPage === 1;
        if (nextBtn) nextBtn.disabled = !result.tiene_mas;
        if (pageInfo) pageInfo.textContent = `Página ${currentPage} de ${Math.ceil(result.total / limit)}`;
      }

    } catch (error) {
      console.error('Error:', error);
      container.innerHTML = `
        <div class="error-state">
          <h3>Error al cargar clientes</h3>
          <p>Por favor, intenta de nuevo más tarde</p>
        </div>
      `;
    }
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    cargarClientes();

    // Búsqueda con debounce
    let searchTimeout: ReturnType<typeof setTimeout>;
    document.getElementById('searchInput')?.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        searchTerm = (e.target as HTMLInputElement).value;
        currentPage = 1;
        cargarClientes();
      }, 300);
    });

    // Filtro de estado
    document.getElementById('estadoFilter')?.addEventListener('change', (e) => {
      estadoFilter = (e.target as HTMLSelectElement).value;
      currentPage = 1;
      cargarClientes();
    });

    // Paginación
    document.getElementById('prevBtn')?.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        cargarClientes();
      }
    });

    document.getElementById('nextBtn')?.addEventListener('click', () => {
      currentPage++;
      cargarClientes();
    });
  });
